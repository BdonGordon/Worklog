{
  "extends": [ "tslint-react" ],
  "rules": {
    "align": [
      false,
      "parameters",
      "arguments",
      "statements"
    ],
    "ban": false,
    "class-name": true,
    "comment-format": [
      false, //changed
      "check-space"
    ],
    "curly": true,
    "eofline": false,
    "forin": true,
    "indent": [ true, "spaces" ],
    "interface-name": [ false, "never-prefix" ], //false
    "jsdoc-format": false, //changed
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false,
    "label-position": true,
    "max-line-length": [ false, 120 ], //changed
    "member-ordering": [
      true,
      "public-before-private",
      "static-before-instance",
      "variables-before-functions"
    ],
    "no-any": false, //changed
    "no-arg": true,
    "no-bitwise": true,
    "no-console": [
      false, //changed
      "log",
      "error",
      "debug",
      "info",
      "time",
      "timeEnd",
      "trace"
    ],
    "no-consecutive-blank-lines": false, //changed
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-variable": true,
    "no-empty": false,
    "no-eval": true,
    "no-shadowed-variable": true,
    "no-string-literal": true,
    "no-switch-case-fall-through": true,
    "no-trailing-whitespace": false,
    "no-unused-expression": false, //changed
    "no-use-before-declare": false, //changed
    "one-line": [
      false, //changed
      "check-catch",
      "check-else",
      "check-open-brace",
      "check-whitespace"
    ],
    "quotemark": [ false, "single", "jsx-double" ],
    "radix": true,
    "semicolon": [ true, "always" ],
    "switch-default": true,

    "trailing-comma": [ false ],

    "triple-equals": [ true, "allow-null-check" ],
    "typedef": [
      false, //changed
      "parameter",
      "property-declaration"
    ],
    "typedef-whitespace": [
      false, //changed
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ],
    "variable-name": [ true, "ban-keywords", "check-format", "allow-leading-underscore", "allow-pascal-case" ],
    "whitespace": [
      false, //changed
      "check-branch",
      "check-decl",
      "check-module",
      "check-operator",
      "check-separator",
      "check-type",
      "check-typecast"
    ]
  },
  "defaultSeverity": "warning"
}
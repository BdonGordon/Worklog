{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es6",
      "es7",
      "dom"
    ],
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "sourceRoot": "src",
    "listFiles": true,
    "diagnostics": true,
    "moduleResolution": "node",
    "types": [
      // add node as an option
      "node"
    ],
    // typeRoots option has been previously configured
    "typeRoots": [
      // add path to @types
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "bin",
    "build",
    "obj"
  ]
}
